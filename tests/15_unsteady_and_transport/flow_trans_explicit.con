{
  problem = {
    TYPE = "SequentialCoupling", 
    description = "Test15 - 2D unsteady flow LM",  
    mesh = {
      mesh_file = "./input/test15.msh"
    },
 
    primary_equation = {
      TYPE = "Unsteady_LMH", 

      input_fields= [
        { rid = 100,
          anisotropy = 1,         // default
          cross_section = 1,            // default
          storativity=1,
          water_source_density = {
            TYPE = "FieldFormula",
            value = "-x"
          },
          init_piezo_head = 0
        },
        {
          region = "IMPLICIT BOUNDARY",
          flow_old_bcd_file = "./input/test15.fbc"
        }
      ],

      n_schurs = 2, 
      output = {
        output_stream = {
          REF = "/system/output_streams/0"
        }, 
        output_fields = [ "pressure_p0", "pressure_p1", "velocity_p0" ]
      }, 

      balance = {
        cumulative = true
      },

      solver = {
        TYPE = "Petsc", 
        a_tol = 1e-12, 
        r_tol = 1e-12
      }, 
 
      time = {
        end_time = 2.0, 
        max_dt = 0.01,
        min_dt = 0.01
      }
    }, 

    secondary_equation = {
      TYPE = "TransportOperatorSplitting", 

      transport = {
        TYPE = "ConvectionTransport",
        input_fields= [
          { rid = 100,
            init_conc = 0
          },
          {
            region = "IMPLICIT BOUNDARY",
            transport_old_bcd_file = "./input/test15_tbc_000",
            time = 0.0
          },
          {
            region = "IMPLICIT BOUNDARY",
            transport_old_bcd_file = "./input/test15_tbc_001",
            time = 0.1
          }
        ]
      },

      output_stream = {
        REF = "/system/output_streams/1"
      }, 

      substances = [
        "conc"
      ], 

      // Test the sorption with no sorbing surface.
      // the porosity is set to 1.0 by default, so there is no sorbing surface
      // and the sorption term has no effect
      reaction_term = {
        TYPE = "Sorption",
        solvent_density= 1.0,
        substances = ["conc"],
        molar_mass= [1.0],
        solubility = [1.0],
        input_fields= [
          {
            r_set="ALL",
            rock_density = 1.0,
            sorption_type=  "linear",
            isotherm_mult= 0.6, 
            isotherm_other= 0.4
          }
        ],
        output_fields = []
      },
      
      time = {
        end_time = 2.0
      },

      balance = {
        cumulative = true
      }
    } 
  }, 

  system = {
    output_streams = [
      {
        file = "./test15.pvd", 
        format = {
          TYPE = "vtk", 
          variant = "ascii"
        }, 
        time_step = 0.1,
        name = "flow_output_stream"
      }, 
      {
        file = "./transport.pvd", 
        format = {
          TYPE = {
            REF = "/system/output_streams/0/format/TYPE"
          }, 
          variant = "ascii"
        }, 
        time_step = 0.1,
        name = "transport_output_stream"
      }
    ]
  }
}